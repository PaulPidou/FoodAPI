{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "parser": "babel-eslint",
    "plugins": [
        "promise"
    ],
    "env": {
        "node": true,
        "es6": true
    },
    "rules": {
        "semi": ["error", "never"],
        "no-useless-escape": "off"
    }
}
